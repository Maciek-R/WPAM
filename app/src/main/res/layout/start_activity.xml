<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="@string/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/AUTHOR" />

    <Button
        android:id="@+id/NewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Exit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="checkButton"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/new_game"
        android:textSize="30dp" />

    <Button
        android:id="@+id/Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AUTHOR"
        android:layout_alignEnd="@+id/NewGame"
        android:layout_alignLeft="@+id/NewGame"
        android:layout_alignRight="@+id/NewGame"
        android:layout_alignStart="@+id/NewGame"
        android:layout_marginBottom="73dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="checkButton"
        android:text="@string/exit"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/NewGame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:layout_weight="0.01" />


        <TextView
            android:text="@string/app_name_upp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:layout_weight="0.01"
            android:gravity="center_vertical"


            android:textSize="36sp" />
    </LinearLayout>

    <Button
        android:id="@+id/LoadLastGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Exit"
        android:layout_alignEnd="@+id/Exit"
        android:layout_alignLeft="@+id/Exit"
        android:layout_alignRight="@+id/Exit"
        android:layout_alignStart="@+id/Exit"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="checkButton"
        android:text="@string/load"
        android:textSize="30dp" />

</RelativeLayout>
